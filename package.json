{
  "name": "gearshaft",
  "version": "0.1.1",
  "description": "",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "scripts": {
    "clean": "rimraf coverage",
    "cov": "opener coverage/index.html",
    "jest": "jest ${JEST_CI_ENV:-'--notify'}",
    "lint": "standard -v",
    "recreate": "export PGHOST=localhost PGUSER=postgres PGPASSWORD=NInAN5t3kJo8d7I3 && ./gems/bin/evt-pg-recreate-db && psql -c \"alter role message_store with password 'NInAN5t3kJo8d7I3';\"",
    "test": "npm run clean && npm run lint && npm run jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "./tools/commit-msg \"$HUSKY_GIT_PARAMS\"",
      "pre-commit": "npm test"
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "testEnvironment": "node",
    "transform": {},
    "verbose": true
  },
  "standard": {
    "env": [
      "jest",
      "node"
    ]
  },
  "author": "Mario Pareja",
  "license": "MIT",
  "dependencies": {
    "lodash.clonedeep": "^4.5.0",
    "pg": "^7.12.1",
    "uuid-validate": "0.0.3"
  },
  "devDependencies": {
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "js-joda": "^1.11.0",
    "opener": "^1.5.1",
    "pino": "^5.13.5",
    "rc": "^1.2.8",
    "rimraf": "^3.0.0",
    "standard": "^14.3.1",
    "systeminformation": "^4.14.17"
  }
}
